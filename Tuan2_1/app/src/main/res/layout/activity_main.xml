<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Cac kieu lap trinh su kien"
        android:gravity="center"
        android:background="#33CC66	"
        />
    <TextView
        android:text="a:"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
        android:textSize="20sp"
    android:gravity="left"/>

    <EditText
        android:id="@+id/etA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_margin="10dp"
        android:textSize="20sp"/>
    <TextView

        android:text="b:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="left"
        android:textSize="20sp"/>


    <EditText
        android:id="@+id/etB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="#33CC66	"
        android:gravity="center"
        />
    <Button
        android:id="@+id/btnTong"
        android:text="Tong 2 so"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Tong"/>
    <Button
        android:id="@+id/btnHieu"
        android:text="Hieu 2 so"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Hieu"/>
    <Button
        android:id="@+id/btnTich"
        android:text="Tich 2 so"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Tich"/>
    <Button
        android:id="@+id/btnThuong"
        android:text="Thuong 2 so"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Thuong"/>

    <Button
        android:id="@+id/btnUoc"
        android:text="Uoc so chung lon nhat"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Uoc"/>
    <Button
        android:id="@+id/btnExit"
        android:text="Thoat chuong trinh"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Thoat"/>

</LinearLayout>
