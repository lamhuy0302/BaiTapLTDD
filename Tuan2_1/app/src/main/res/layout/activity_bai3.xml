<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<TextView
    android:textSize="20sp"
    android:id="@+id/tv1"
    android:padding="10dp"
    android:text="Chuyen doi nam duong lich"
    android:gravity="center"
    android:textColor="#fff"
    android:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/year"
        android:layout_below="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:text="Nam duong lich:"
        />
    <EditText
        android:id="@+id/etNamDuong"
        android:layout_below="@+id/tv1"
        android:layout_toRightOf="@+id/year"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <Button
        android:onClick="ChuyenNam"
        android:id="@+id/btnC"
        android:text="Chuyen doi"
        android:padding="10dp"
        android:layout_below="@+id/year"
        android:layout_toRightOf="@+id/year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/lunaryear"
        android:layout_below="@+id/btnC"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:text="Nam am lich:"
        />
    <TextView
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#fff"
        android:background="#289"
        android:id="@+id/tvNamAm"
        android:layout_below="@+id/btnC"
        android:layout_toRightOf="@+id/year"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</RelativeLayout>