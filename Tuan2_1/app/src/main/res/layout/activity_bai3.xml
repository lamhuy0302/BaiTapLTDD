<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:padding="10dp"
        android:text="Chuyen doi nam duong lich"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/tv1"
        android:gravity="center"
        android:padding="10dp"
        android:text="Nam duong lich:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etNamDuong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv1"
        android:layout_toRightOf="@+id/year" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/year"
        android:layout_toRightOf="@+id/year"
        android:onClick="ChuyenNam"
        android:padding="10dp"
        android:text="Chuyen doi" />

    <TextView
        android:id="@+id/lunaryear"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/btnC"
        android:gravity="center"
        android:padding="10dp"
        android:text="Nam am lich:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvNamAm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btnC"
        android:layout_toRightOf="@+id/year"
        android:background="#289"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#fff" />
</RelativeLayout>